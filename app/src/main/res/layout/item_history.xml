<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="6dp"
    android:backgroundTint="@color/white"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Type (Expense/Income) -->
        <TextView
            android:id="@+id/txtType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Expense"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Category -->
        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: Food"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>

        <!-- Expense Amount -->
        <TextView
            android:id="@+id/txtExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense: 1200"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <!-- Income Amount -->
        <TextView
            android:id="@+id/txtIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income: 5000"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txtTotalIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Income: 50000"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <!-- Date & Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 10/09/2025"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Time: 11:45 AM"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Note -->
        <TextView
            android:id="@+id/txtNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note: Lunch with friends"
            android:textSize="14sp"
            android:textColor="@color/darker_gray"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
