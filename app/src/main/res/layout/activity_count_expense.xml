<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1D2C"
    android:paddingTop="16dp">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/AddExpense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Expenses"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/AddIncome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Income"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:backgroundTint="#FFC107"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Amount Box -->
    <androidx.cardview.widget.CardView
        android:id="@+id/amountBox"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/topBar"
        android:layout_marginTop="10dp"
        app:cardElevation="20dp"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:hint="$ 00.00"
                android:textSize="28sp"
                android:textStyle="bold"
                android:inputType="number"
                android:textColor="@android:color/black"
                 />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Type Label -->
    <TextView
        android:id="@+id/typeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/amountBox"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white" />

    <!-- Type Buttons -->
    <LinearLayout
        android:id="@+id/typeButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/typeLabel"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExpense"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Expense"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/btn_expense_selector" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIncome"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Income"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_income_selector" />
    </LinearLayout>

    <!-- Category & Edit Row -->
    <RelativeLayout
        android:id="@+id/categoryBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeButtons"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/categoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/editLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/categoryBar"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="20dp"
        tools:listitem="@layout/itemcard" />

    <!-- Date & Time -->
    <RelativeLayout
        android:id="@+id/dateTimeSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerview"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="Time"
            android:backgroundTint="#FFC107"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/btnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="Date"
            android:backgroundTint="#FFC107"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:textColorHint="@color/white" />
    </RelativeLayout>

    <!-- Note Label -->
    <TextView
        android:id="@+id/noteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/dateTimeSection"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp" />

    <!-- Note Box -->
    <androidx.cardview.widget.CardView
        android:id="@+id/noteBox"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/noteLabel"
        android:layout_marginTop="15dp"
        app:cardElevation="20dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/Note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Note here"
            android:paddingStart="15dp"
            android:textColorHint="@color/darker_gray"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>
