<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1D2C"
    tools:context=".dashboardfragment">

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>

    <!-- Expense Gauge Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/hello"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/todayExpenseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Expense"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"/>

            <com.github.anastr.speedviewlib.TubeSpeedometer
                android:id="@+id/tubeSpeedometer"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Total Expense Heading -->
    <TextView
        android:id="@+id/totalexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Expense"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/card"
        android:layout_marginStart="20dp"
        android:visibility="gone"/>

    <!-- Expense Card (Hidden by Default) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/Expcard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/totalexp"
        android:layout_margin="20dp"
        android:visibility="gone"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/todayExpDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Expense Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/quickadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Add"
        android:layout_below="@id/card"
        android:textSize="25dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quickadd"
        android:layout_marginTop="5dp"
      android:paddingHorizontal="20dp"/>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:contentDescription="Add Expense"
        app:srcCompat="@android:drawable/ic_input_add"
         />

</RelativeLayout>
